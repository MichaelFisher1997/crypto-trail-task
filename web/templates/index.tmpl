<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>SolAPI Tester</title>
  <style>
    body { font-family: system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Cantarell, 'Helvetica Neue', Arial, 'Noto Sans'; padding: 24px; }
    label { display:block; margin-top: 12px; }
    input, button { font-size: 14px; padding: 8px; }
    .row { margin: 8px 0; }
    pre { background:#f5f5f5; padding:12px; overflow:auto; }
    .grid { display:grid; grid-template-columns: 1fr 1fr; gap: 16px; }
  </style>
</head>
<body>
  <h1>SolAPI Tester</h1>
  <div class="grid">
    <div>
      <h3>Client</h3>
      <div class="row">
        <label>API Key (X-API-Key)</label>
        <input id="apiKey" type="text" placeholder="paste client API key" style="width: 100%" />
      </div>
      <div class="row">
        <label>Wallets (comma separated)</label>
        <input id="wallets" type="text" placeholder="AxfGqNuah...,9xW..." style="width: 100%" />
      </div>
      <div class="row">
        <button id="btn">Get Balance</button>
      </div>
    </div>
    <div>
      <h3>Sign Up (testing)</h3>
      <div class="row">
        <label>Owner (optional)</label>
        <input id="owner" type="text" placeholder="acme-user" style="width: 100%" />
      </div>
      <div class="row">
        <label>Email (optional)</label>
        <input id="email" type="email" placeholder="user@example.com" style="width: 100%" />
      </div>
      <div class="row">
        <button id="btnSignup">Sign Up (get API key)</button>
      </div>
    </div>
  </div>
  <div class="row">
    <label>Response</label>
    <pre id="out">(no response yet)</pre>
  </div>

  <script>
    const btn = document.getElementById('btn');
    const btnSignup = document.getElementById('btnSignup');
    const out = document.getElementById('out');

    btn.addEventListener('click', async () => {
      const apiKey = document.getElementById('apiKey').value.trim();
      const walletsStr = document.getElementById('wallets').value.trim();
      const wallets = walletsStr ? walletsStr.split(',').map(s => s.trim()).filter(Boolean) : [];
      if (!apiKey) { out.textContent = 'Please provide API key'; return; }
      if (wallets.length === 0) { out.textContent = 'Please provide at least one wallet'; return; }
      out.textContent = 'Loading...';
      try {
        const res = await fetch('/api/get-balance', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json', 'X-API-Key': apiKey },
          body: JSON.stringify({ wallets })
        });
        const text = await res.text();
        if (!res.ok) {
          let msg = text; try { msg = JSON.stringify(JSON.parse(text)); } catch {}
          alert(`Error ${res.status}: ${msg}`);
          out.textContent = `HTTP ${res.status}\n` + msg;
          return;
        }
        try { out.textContent = JSON.stringify(JSON.parse(text), null, 2); }
        catch { out.textContent = text; }
      } catch (e) {
        alert(`Request failed: ${e}`);
        out.textContent = String(e);
      }
    });

    btnSignup.addEventListener('click', async () => {
      const owner = document.getElementById('owner').value.trim();
      const email = document.getElementById('email').value.trim();
      out.textContent = 'Signing up...';
      try {
        const res = await fetch('/public/signup', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ owner: owner || undefined, email: email || undefined })
        });
        const text = await res.text();
        if (!res.ok) {
          let msg = text; try { msg = JSON.stringify(JSON.parse(text)); } catch {}
          alert(`Signup Error ${res.status}: ${msg}`);
          out.textContent = `HTTP ${res.status}\n` + msg;
          return;
        }
        const data = JSON.parse(text);
        document.getElementById('apiKey').value = data.key || '';
        alert('Signed up. API key copied to the API Key field.');
        out.textContent = JSON.stringify(data, null, 2);
      } catch (e) {
        alert(`Signup request failed: ${e}`);
        out.textContent = String(e);
      }
    });
  </script>
</body>
</html>
